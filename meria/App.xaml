<Application x:Class="meria.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:meria"
             StartupUri="MVVM/View/MainPage.xaml">
    <Application.Resources>
        <Style x:Key="down" x:Name="down" TargetType="Image">
            <Setter Property="Source" Value="/Images/base/restore_down.png"/>
        </Style>
        <Style x:Key="up"  x:Name="up" TargetType="Image">
            <Setter Property="Source" Value="/Images/base/unchecked_checkbox.png"/>
        </Style>
    </Application.Resources>
</Application>
